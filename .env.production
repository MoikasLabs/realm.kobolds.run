# ============================================
# Shalom Realm Production Environment Config
# ============================================
# Copy this file to .env and update values
# DO NOT commit actual .env to version control

# --------------------------------------------
# Room Identity
# --------------------------------------------
ROOM_NAME=Shalom Realm
ROOM_DESCRIPTION="Dragon & Kobold Ecosystem"
ROOM_ID=shalom-realm-main
MAX_AGENTS=50

# --------------------------------------------
# Server Configuration
# --------------------------------------------
WORLD_HOST=0.0.0.0
WORLD_PORT=18800
NODE_ENV=production

# --------------------------------------------
# Frontend Configuration (for dev)
# --------------------------------------------
VITE_PORT=3000

# --------------------------------------------
# Security / API
# --------------------------------------------
# API Secret for internal communication
# Generate with: openssl rand -hex 32
REALM_API_SECRET=GENERATE_WITH_openssl_rand_-hex_32

# JWT secret for session management (optional)
JWT_SECRET=GENERATE_WITH_openssl_rand_-hex_32

# Admin/API access whitelist (comma-separated IPs)
ADMIN_WHITELIST=127.0.0.1

# --------------------------------------------
# Nostr Relays
# --------------------------------------------
# Comma-separated list of Nostr relays for world state sync
WORLD_RELAYS="wss://relay.damus.io,wss://nos.lol,wss://relay.nostr.band"

# Private key for Nostr publishing (BE CAREFUL - never commit this!)
# Generate with: nostr-tools nip19.nprivencode(nostr-tools.generatePrivateKey())
NOSTR_PRIVATE_KEY=

# --------------------------------------------
# Logging
# --------------------------------------------
# Log levels: error, warn, info, debug
LOG_LEVEL=info

# Log file paths (relative to project root or absolute)
LOG_FILE=/var/log/realm-shalohm/server.log
ERROR_LOG_FILE=/var/log/realm-shalohm/error.log

# Log rotation (handled by logrotate, but useful for app config)
LOG_MAX_SIZE=100M
LOG_MAX_FILES=10

# --------------------------------------------
# Performance
# --------------------------------------------
# WebSocket connection limits
WS_MAX_CONNECTIONS=100
WS_MESSAGE_SIZE_LIMIT=1048576  # 1MB

# Agent behavior
AGENT_THINK_INTERVAL=1000  # ms
AGENT_ACTION_INTERVAL=100  # ms

# --------------------------------------------
# Monitoring & Health
# --------------------------------------------
# Health check endpoint
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30000  # ms

# Metrics endpoint (for Prometheus/monitoring)
METRICS_ENABLED=false
METRICS_PORT=9090

# --------------------------------------------
# Database (if using external DB later)
# --------------------------------------------
# DATABASE_URL=
# REDIS_URL=

# --------------------------------------------
# CDN / Static Assets
# --------------------------------------------
CDN_URL=
STATIC_ASSETS_URL=

# --------------------------------------------
# Third-party Services
# --------------------------------------------
# OpenAI API (if used for agent responses)
# OPENAI_API_KEY=

# Sentry / Error tracking
# SENTRY_DSN=

# --------------------------------------------
# Feature Flags
# --------------------------------------------
FEATURE_PERSISTENT_STATE=true
FEATURE_NPC_AGENTS=true
FEATURE_USER_AVATARS=true
FEATURE_VOICE_CHAT=false
FEATURE_SCREEN_SHARE=false